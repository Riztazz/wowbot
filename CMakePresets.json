{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "msbuild-win64",
            "displayName": "Windows x64 (MSBuild - Visual Studio 2022)",
            "binaryDir": "${sourceDir}/.build_ms/${presetName}",
            "installDir": "${sourceDir}/bin/",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "environment": {
                "VCPKG_BINARY_SOURCES": "clear;files,${sourceDir}/.build_ms/vcpkg_archives,readwrite;"
            },
            "cacheVariables": {
                "VCPKG_INSTALLED_DIR": "${sourceDir}/.build_ms/vcpkg_installed",
                "VCPKG_INSTALL_OPTIONS": "--x-buildtrees-root=${sourceDir}/.build_ms/vcpkg_buildtrees",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_HOST_TRIPLET": "x64-windows",
                "VCPKG_OVERLAY_PORTS": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/.vcpkg/ports"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/.vcpkg/triplets"
                },
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY_DEBUG": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/bin/Debug"
                },
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY_RELEASE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/bin/Release"
                },
                "CMAKE_INSTALL_PREFIX": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/install"
                },
                "CMAKE_CXX_STANDARD": "23"
            }
        },
        {
            "name": "ninja-build",
            "displayName": "Windows x64 (Ninja Build System)",
            "binaryDir": "${sourceDir}/.build_ninja/${presetName}",
            "installDir": "${sourceDir}/bin/",
            "generator": "Ninja Multi-Config",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "environment": {
                "VCPKG_BINARY_SOURCES": "clear;files,${sourceDir}/.build_ninja/vcpkg_archives,readwrite;"
            },
            "cacheVariables": {
                "VCPKG_INSTALLED_DIR": "${sourceDir}/.build_ninja/vcpkg_installed",
                "VCPKG_INSTALL_OPTIONS": "--x-buildtrees-root=${sourceDir}/.build_ninja/vcpkg_buildtrees",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_HOST_TRIPLET": "x64-windows",
                "VCPKG_OVERLAY_PORTS": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/.vcpkg/ports"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/.vcpkg/triplets"
                },
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY_DEBUG": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/bin/Debug"
                },
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY_RELEASE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/bin/Release"
                },
                "CMAKE_INSTALL_PREFIX": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/install"
                },
                "CMAKE_CXX_STANDARD": "23"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msbuild-win64-debug",
            "displayName": "Debug (MSBuild - Visual Studio 2022)",
            "configurePreset": "msbuild-win64",
            "configuration": "Debug"
        },
        {
            "name": "msbuild-win64-release",
            "displayName": "Release (MSBuild - Visual Studio 2022)",
            "configurePreset": "msbuild-win64",
            "configuration": "Release"
        },
        {
            "name": "ninja-build-debug",
            "displayName": "Debug (Ninja Build System)",
            "configurePreset": "ninja-build",
            "configuration": "Debug"
        },
        {
            "name": "ninja-build-release",
            "displayName": "Release (Ninja Build System)",
            "configurePreset": "ninja-build",
            "configuration": "Release"
        }
    ]
}